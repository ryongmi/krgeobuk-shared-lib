{
  "files": [],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/swagger" },
    { "path": "./packages/database" },
    { "path": "./packages/user" },
    { "path": "./packages/auth" },
    { "path": "./packages/portal" }
  ],
  "compilerOptions": {
    "baseUrl": "./" /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
      "@krgeobuk/core": ["packages/core/src"],
      "@krgeobuk/core/*": ["packages/core/src/*"],
      "@krgeobuk/swagger": ["packages/swagger/src"],
      "@krgeobuk/swagger/*": ["packages/swagger/src/*"],
      "@krgeobuk/database": ["packages/database/src"],
      "@krgeobuk/database/*": ["packages/database/src/*"],
      "@krgeobuk/user": ["packages/user/src"],
      "@krgeobuk/user/*": ["packages/user/src/*"],
      "@krgeobuk/auth": ["packages/auth/src"],
      "@krgeobuk/auth/*": ["packages/auth/src/*"],
      "@krgeobuk/portal": ["packages/portal/src"],
      "@krgeobuk/portal/*": ["packages/portal/src/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
